<div class="card-panel orange lighten-1">
    <div class="col s12 m12 l12">
        <h5 class="white-text text-darken-2">Transaction hash: </h5>
        <span class="white-text text-darken-2">{{hashTransaction}}</span>
    </div>
</div>
<div class="section">
    <h5>Summary</h5>
    <div class="row">
        <div class="col s6">
            <p class="black-text">Received Time</p>
        </div>
        <div class="col s6">
            <p>{{transaction.0.relation.properties.receivedTime}}</p>
        </div>
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col s6">
            <p>Block Hash</p>
        </div>
        <div class="col s6">
            <p>{{transaction.0.relation.properties.blockHash}}</p>
        </div>
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col s6">
            <p>Total BTC</p>
        </div>
        <div class="col s6">
            <p>{{totalBTC}} BTC</p>
        </div>
    </div>
    <div class="divider"></div>
</div>
<div class="row">
    <svg id="transactionSVG" style="background-color: #ececec; width:100%;" height="350"></svg>
</div>
<div class="row">
    <table class="table striped">

        <thead>
            <tr>
                <td>Source</td>
                <td>Destination</td>
                <td>Value</td>
            </tr>
        </thead>
        <tbody>
            {{#each transaction}}
                <tr>
                    <td>{{source.properties.hash}}</td>
                    <td>{{destination.properties.hash}}</td>
                    <td>{{relation.properties.value}} BTC</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    var json = {{{json transaction}}};
    console.info(json);
    makeSVGTransaction(json, 'transactionSVG', false);
</script>